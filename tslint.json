{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-standard",
        //"tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "prettier": [
          true,
          {
            "singleQuote": true,
            "semi": false
          }
        ],
        "quotemark": [ true, "single", "jsx-double" ],
        "semicolon": [ "false", "never" ],
        "trailing-comma": false
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ]
}
